<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--  mapper file : 실행시킬 query를 가지고 있는 파일 -->
<mapper namespace="com.spring.mapper.MemberMapper">

    <select id="selectAll" resultType="MemberDto">
        select * from member
    </select>

    <select id="selectOne" parameterType="string" resultType="MemberDto">
        select * from member where userId = #{id}
    </select>
    
    <insert id="regist" parameterType="MemberDto">
        insert into member values(#{id}, #{pw}, #{name}, #{email}, #{phone}, now())
    </insert>
    
    <update id = "mupdate" parameterType="MemberDto">
        update member set phone = #{phone}, userName = #{name}, userPass = #{pw} where id = #{id}
    </update>
    
    <delete id = "mdelete" parameterType="string">
        delete from member where userId = #{id}
    </delete>
</mapper>